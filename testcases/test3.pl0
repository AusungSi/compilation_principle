program example;
const
maxlimit = 100,
startval = 1;

var
counter, accumulator, temp;

procedure calcnext;
begin
if odd counter then
accumulator := accumulator + (counter * 2)
else
accumulator := accumulator - (counter / 2);

if accumulator < 0 then
accumulator := 0
end;

procedure mainloop;
begin
counter := startval;
accumulator := 0;

while counter <= maxlimit do
begin
call calcnext;

if accumulator >= 50 then
begin
  write(counter, accumulator);
  temp := 10;
  if temp <> counter then
     accumulator := accumulator - temp
end;

counter := counter + 1


end
end;

begin
read(temp);
if temp > 0 then
call mainloop
else
write(9999);

write(accumulator)
end